<!DOCTYPE html>
<html>
<head>
    <title>Médicos</title>
</head>
<body>
    <h1>Lista de Médicos</h1>
    <a href="/medicos/nuevo">➕ Crear nuevo médico</a>
    <table border="1" cellpadding="5">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Teléfono</th>
                <th>Correo</th>
                <th>Especialidades</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% medicos.forEach(m => { %>
                <tr>
                    <td><%= m.med_id %></td>
                    <td><%= m.med_primer_nombre %> <%= m.med_primer_apellido %></td>
                    <td><%= m.med_telefono %></td>
                    <td><%= m.med_correo %></td>
                    <td>
                        <% if (m.especialidades.length > 0) { %>
                            <ul>
                                <% m.especialidades.forEach(e => { %>
                                    <li><%= e.esp_nombre %></li>
                                <% }) %>
                            </ul>
                        <% } else { %>
                            <em>Sin especialidades</em>
                        <% } %>
                    </td>
                    <td>
                        <a href="/medicos/<%= m.med_id %>/editar">✏️ Editar</a>
                        <form action="/medicos/<%= m.med_id %>/eliminar" method="POST" style="display:inline;">
                            <button type="submit">❌ Eliminar</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
